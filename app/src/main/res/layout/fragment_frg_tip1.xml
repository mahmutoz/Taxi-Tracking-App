    <LinearLayout
        android:id="@+id/satir5"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/aciklama"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/aciklama"
        app:layout_constraintTop_toBottomOf="@+id/satir4">

        <TextView
            android:id="@+id/tip1tarih5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tip1sefer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tip1yolcu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
